<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                   assembly="EstudandoNHibernate"
                   namespace="EstudandoNHibernate.Domains">
  <class name="Categoria">
    <cache usage="nonstrict-read-write"/>
    <id name="Id" column="CategoriaId">
      <generator class="identity"></generator>
    </id>
    <property name="Descricao"/>
    
    <set name="Pessoas" table="PessoasCategorias" inverse="true">
      <cache usage="nonstrict-read-write"/>
      <key column="CategoriaId"  /> 
      <many-to-many class="Pessoa" column="pessoaId"></many-to-many>
    </set>
  </class>
</hibernate-mapping>
