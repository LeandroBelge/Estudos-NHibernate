<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                   assembly="EstudandoNHibernate"
                   namespace="EstudandoNHibernate.Domains">
  <class name="Pessoa">
    <cache usage="read-only" />
    <id name="Id" column="PessoaId">
      <generator class="identity"></generator>
    </id>
    <property name="Nome"/>
    <set name="Categorias" table="PessoasCategorias" inverse="true">
      <cache usage="nonstrict-read-write"/>
      <key column="PessoaId" />
      <many-to-many class="Categoria" column="CategoriaId"></many-to-many>
    </set>
  </class>
</hibernate-mapping>
